{
  "publisher": "lbauskar",
  "name": "kanban",
  "displayName": "Kanban",
  "description": "Simple kanban board for VS Code. Visually organize your ideas!",
  "icon": "images/icon.png",
  "version": "1.7.4",
  "engines": {
    "vscode": "^1.53.2"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "categories": [
    "Visualization",
    "Notebooks"
  ],
  "keywords": [
    "kanban",
    "board",
    "agile",
    "project",
    "management",
    "sprint",
    "productivity",
    "scrum"
  ],
  "extensionKind": [
    "ui"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./build/extension.js",
  "contributes": {
    "configuration": {
      "title": "Kanban",
      "properties": {
        "kanban.statusButton.alignment": {
          "type": "string",
          "default": "Left",
          "enum": [
            "Left",
            "Right",
            "None"
          ],
          "description": "Show the Kanban button on the left or right side of your status bar, or nowhere."
        },
        "kanban.statusButton.priority": {
          "type": "number",
          "default": 100,
          "description": "Where the Kanban button should be in relation to other buttons. A higher value means further left."
        },
        "kanban.saveFiles.pathPreferences": {
          "type": "array",
          "default": [
            ".vscode/kanban.json",
            "kanban.json"
          ],
          "description": "When attempting to load from a file, check these paths from left to right, stopping at first success."
        }
      }
    },
    "commands": [
      {
        "command": "kanban.view",
        "title": "Kanban: View"
      }
    ]
  },
  "repository": "https://github.com/lbauskar/kanban.git",
  "homepage": "/",
  "scripts": {
    "vscode:prepublish": "(webpack --config webpack.config.js --mode=production) && (webpack --config webpack-extension.config.js --mode=production)",
    "build": "(webpack --config webpack.config.js --mode=development) && (webpack --config webpack-extension.config.js --mode=development)",
    "test": "jest",
    "package": "vsce package --no-yarn",
    "docs": "jsdoc -c jsdoc.conf.json"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@types/react": "^18.2.17",
    "@types/react-beautiful-dnd": "^13.1.1",
    "@types/react-dom": "^18.2.7",
    "@types/vscode": "^1.53.0",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "@vscode/test-electron": "^2.1.3",
    "@vscode/vsce": "^2.7.0",
    "css-loader": "^6.7.1",
    "eslint": "^8.46.0",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "jsdoc": "^4.0.2",
    "mini-css-extract-plugin": "^2.6.0",
    "prop-types": "^15.8.1",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.1.0",
    "typescript": "^5.1.6",
    "webpack": "^5.72.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.1",
    "@szhsin/react-menu": "^4.0.2",
    "@vscode/codicons": "^0.0.33",
    "csstype": "^3.0.11",
    "just-clone": "^6.2.0",
    "path-browserify": "^1.0.1",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.1.0",
    "react-markdown": "^8.0.3",
    "react-textarea-autosize": "^8.3.3",
    "remark-breaks": "^3.0.2",
    "remark-gfm": "^3.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
